import tls
import .tcp as tcp
import net.x509 as net
import writer

main:
  test_site "www.cloudflare.com"

test_site host/string -> none:
  port := 443
  raw := tcp.TcpSocket
  raw.connect host port
  socket := tls.Socket.client raw
    // Install the roots needed.
    --root_certificates=[BALTIMORE_CYBERTRUST_ROOT, GLOBALSIGN_ROOT_CA, DIGICERT_GLOBAL_ROOT_G2]
    --server_name=host

  socket.handshake

  print "Handshake complete to $host"
  session := socket.session_.session_state
  print "Session data: $session"

  socket.close

  // Now try to connect again, using the session data.

  raw2 := tcp.TcpSocket
  raw2.connect host port

  // Don't need root certs for a resume.
  socket2 := tls.Socket.client raw2
    --server_name=host

  // Put the session state from the last connection on it.
  socket2.session_.session_state = session

  // Try to handshake in pure Toit.
  socket2.handshake

